package numberManipulation;

import java.util.Scanner;

public class Nth_Term {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int n=0;
		Scanner sc= new Scanner(System.in);
		int nu=sc.nextInt();
		for(int i=1;i<=nu;i++) {
			n+=i;
			if(i==nu) {
			System.out.println(n);
			}
		}

	}

}
