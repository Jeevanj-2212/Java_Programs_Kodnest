package holiday;

import java.util.Scanner;

public class H7_PascalTriangle {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		for(int i=1;i<=n;i++) {
			for(int j=n;j>=i;j--) {
				System.out.print(" ");
			}
			for(int k=1;k<=i;k++) {
				if(i==1||k==1)
				{
					System.out.print(1+" ");
					
				}
				else {
				System.out.print(i+" ");
				}
			}
			System.out.println();
			
		}

	}

}
